<% for(let post of posts){ %>
    <li>
        <% if(locals.user && user.id == post.user.id) {%>
            <a href="/post/delete/<%= post.id %>"><i class="fa-solid fa-trash"></i></a>
        <% } %>
        <%= post.content %><br> 
        <small><%= post.user.name %></small>

        <div id="comments">
            <p>Comments</p>
            <ul type="none">
                <% for(let comment of post.comments) { %>
                        <%- include('_comment',{comment:comment}) -%>
                <% } %>
            </ul>
        </div>
        <% if(locals.user) {%>
            <form action="/comment/create?post_id=<%= post._id %>" method="Post">
                <textarea name="content" rows="3" cols="30" placeholder="Enter the Comment"></textarea>
                <input type="submit" value="Comment">
            </form>
        <% } %>
        <br><br>
    </li>
<% } %>